# Database connection string
DATABASE_URI=mongodb://127.0.0.1/your-database-name

# Or use a PG connection string
#DATABASE_URI=postgresql://127.0.0.1:5432/your-database-name

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# ============================================
# SPLIT-HEAD ARCHITECTURE (Cloudflare Pages Frontend)
# ============================================
# URL of the Cloudflare Pages frontend for CORS and LivePreview
# Leave blank if running monolith (frontend + admin on same domain)
FRONTEND_URL=https://www.wlf.com.mx

# ============================================
# CLOUDFLARE R2 STORAGE (Optional)
# ============================================
# If all R2 variables are set, media uploads will use R2 instead of local disk
# This is REQUIRED for production to prevent data loss on container rebuilds

# Your R2 bucket name
R2_BUCKET=wolf-media

# Your Cloudflare Account ID (from R2 dashboard URL)
R2_ACCOUNT_ID=5fa6c26b9bd2ac548a0ef88eddcbcffb

# R2 API Token Credentials (from "Manage R2 API Tokens")
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key

# Public URL for serving files (custom domain recommended)
# If using R2 custom domain: https://media.wlf.com.mx
# If using R2 dev URL: https://pub-XXXXX.r2.dev
R2_PUBLIC_ENDPOINT=https://media.wlf.com.mx
